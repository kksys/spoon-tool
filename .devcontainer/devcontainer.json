{
  "image": "mcr.microsoft.com/devcontainers/universal:latest",
  "customizations": {
    "vscode": {
      "extensions": [
        "mhutchie.git-graph",
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "github.vscode-github-actions",
        "editorconfig.editorconfig",
        "redhat.vscode-yaml",
        "humao.rest-client",
        "vitest.explorer"
      ]
    }
  },
  "portsAttributes": {
    "5173": {
      "label": "spoon-tool-client",
      "onAutoForward": "openBrowser"
    },
    "8787": {
      "label": "spoon-tool-backend",
      "onAutoForward": "notify"
    }
  },
  "otherPortsAttributes": {
    "onAutoForward": "ignore"
  },
  "postCreateCommand": "${CODESPACE_VSCODE_FOLDER}/.devcontainer/scripts/post-create-command.sh",
  "postAttachCommand": "${CODESPACE_VSCODE_FOLDER}/.devcontainer/scripts/post-attach-command.sh"
}
