{
  $schema: "https://docs.renovatebot.com/renovate-schema.json",
  extends: [
    "config:recommended",
    "docker:pinDigests",
    "helpers:pinGitHubActionDigests",
    ":disableRateLimiting"
  ],
  rebaseWhen: "behind-base-branch",
  automerge: true,
  rangeStrategy: "bump",
  enabledManagers: [
    "devcontainer",
    "github-actions",
    "npm",
    "nodenv",
    "nvm"
  ],
  vulnerabilityAlerts: {
    labels: [
      "security"
    ],
  },
  hostRules: [
    {
      abortOnError: true,
    }
  ],
  assigneesSampleSize: 2,
  reviewersSampleSize: 1,
  timezone: "Asia/Tokyo",
  schedule: [
    "before 2am on Sunday"
  ],
  labels: [
    "renovate"
  ],
  devcontainer: {
    "fileMatch": [
      "^.devcontainer/devcontainer.json$",
      "^.devcontainer.json$",
      "^.devcontainer/(?:codespaces|local)/devcontainer.json$"
    ]
  },
  customManagers: [],
  packageRules: [
    // squash to one commit the change of node and @types/node because they are dependent each other
    {
      matchPackageNames: [
        "node",
        "@types/node",
      ],
      groupName: "Node.js",
    }
  ],
  updateLockFiles: true,
  postUpdateOptions: [
    "pnpmDedupe"
  ],
}
