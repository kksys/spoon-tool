{
  $schema: 'https://docs.renovatebot.com/renovate-schema.json',
  extends: [
    'config:recommended',
    'docker:pinDigests',
    'helpers:pinGitHubActionDigests',
    ':disableRateLimiting',
  ],
  rebaseWhen: 'behind-base-branch',
  automerge: true,
  rangeStrategy: 'bump',
  enabledManagers: [
    'devcontainer',
    'github-actions',
    'npm',
    'nodenv',
    'nvm',
  ],
  vulnerabilityAlerts: {
    labels: [
      'security',
    ],
  },
  hostRules: [
    {
      abortOnError: true,
    },
  ],
  assigneesSampleSize: 2,
  reviewersSampleSize: 1,
  timezone: 'Asia/Tokyo',
  schedule: [
    'before 2am on Sunday',
  ],
  labels: [
    'renovate',
  ],
  devcontainer: {
    managerFilePatterns: [
      '/^.devcontainer/devcontainer.json$/',
      '/^.devcontainer.json$/',
      '/^.devcontainer/(?:codespaces|local)/devcontainer.json$/',
    ],
  },
  customManagers: [],
  packageRules: [
    {
      matchPackageNames: [
        'node',
        '@types/node',
      ],
      groupName: 'Node.js',
    },
    {
      description: 'Ignore updating pnpm field on engines',
      matchPackageNames: [
        'pnpm',
      ],
      matchManagers: [
        'npm',
      ],
      matchDepTypes: [
        'engines',
      ],
      enabled: false,
    },
  ],
  updateLockFiles: true,
  postUpdateOptions: [
    'pnpmDedupe',
  ],
}
