{
  $schema: "https://docs.renovatebot.com/renovate-schema.json",
  extends: [
    "config:recommended",
    "docker:pinDigests",
    "helpers:pinGitHubActionDigests",
    ":disableRateLimiting"
  ],
  enabledManagers: [
    "devcontainer",
    "github-actions",
    "custom.regex",
    "npm",
  ],
  vulnerabilityAlerts: {
    labels: [
      "security"
    ],
  },
  hostRules: [
    {
      abortOnError: true,
    }
  ],
  assigneesSampleSize: 2,
  reviewersSampleSize: 1,
  timezone: "Asia/Tokyo",
  schedule: [
    "before 2am on Sunday"
  ],
  customManagers: [
    {
      customType: "regex",
      fileMatch: [
        "^pnpm-workspace.yaml$"
      ],
      matchStringsStrategy: "recursive",
      matchStrings: [
        "  (?<quotedDepName>\"?(?<depName>[^:\n\"]+)\"?): (?<currentValue>[^\n]+)"
      ],
      autoReplaceStringTemplate: "  {{{quotedDepName}}}: {{{newValue}}}",
      datasourceTemplate: "npm",
    },
  ],
}
